<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/edit_txt_total_marks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:hint="total marks"
        android:layout_height="100dp"/>
    <EditText
        android:id="@+id/edit_txt_achived_marks"
        android:hint="achived marks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_txt_total_marks"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_txt_achived_marks"
        android:layout_width="wrap_content"
        android:text="Done"
        android:backgroundTint="@color/black"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>