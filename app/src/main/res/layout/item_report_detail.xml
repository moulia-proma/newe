<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/primaryColor"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_marks"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/skill_competence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/jost_regular"
        android:id="@+id/text_marks_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="20 marks on quiz 1"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/image_view_marks"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/jost_regular"
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="12-31-23"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/image_view_marks"
        app:layout_constraintTop_toBottomOf="@id/text_marks_details" />
</androidx.constraintlayout.widget.ConstraintLayout>